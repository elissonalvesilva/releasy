# ------------------------------------------
# ðŸš€ Stage 1 â€” Build Go binary
# ------------------------------------------
FROM golang:1.23.10-alpine3.22 AS builder

RUN apk add --no-cache git

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN go build -o api .

# ------------------------------------------
# ðŸš€ Stage 2 â€” Image final minimalista
# ------------------------------------------
FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/api .

EXPOSE 8080

ENTRYPOINT ["./api"]
